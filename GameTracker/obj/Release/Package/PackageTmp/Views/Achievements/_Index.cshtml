@model IEnumerable<GameTracker.Models.AchievementModel.AchievementList>
@{
    ViewBag.Title = "Quest";
    <h3>Achievements</h3>
}

<p>
    @Html.ActionLink("Create New Achievement", "../Achievements/AchievementCreate", new { }, htmlAttributes: new { @class = "btn" })
</p>
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AchievementName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AchievementNotes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AchievementCompleted)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AchievementName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AchievementNotes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AchievementCompleted)
            </td>
            <td>
                @Html.ActionLink("Edit", "../Achievements/AchievementEdit", new { id=item.AchievmentID }, htmlAttributes: new { @class = "btn" }) |
                @Html.ActionLink("Details", "../Achievements/AchievementDetails", new { id=item.AchievmentID }, htmlAttributes: new { @class = "btn" }) |
                @Html.ActionLink("Delete", "../Achievements/AchievementDelete", new { id=item.AchievmentID }, htmlAttributes: new { @class = "btn" })
            </td>
        </tr>
    }
</table>
<hr />