        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index", new { }, htmlAttributes: new { @class = "btn" })
        </div>
    }
</div>
