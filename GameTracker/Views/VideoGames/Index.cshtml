@model IEnumerable<GameTracker.Models.VideoGameModel.VideoGameList>

@{
    ViewBag.Title = "Video Games";
}
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
<br />
<h2>Video Games</h2>

<p>
    @Html.ActionLink("Create New Video Game", "VideoGameCreate", new { }, htmlAttributes: new { @class = "btn" })
    @Html.ActionLink("Create New Quest", "../Quests/QuestCreate", new { }, htmlAttributes: new { @class = "btn" })
    @Html.ActionLink("Create New Item", "../Inventories/InventoryCreate", new { }, htmlAttributes: new { @class = "btn" })
    @Html.ActionLink("Create New Boss", "../Bosses/BossCreate", new { }, htmlAttributes: new { @class = "btn" })
    @Html.ActionLink("Create New Achievement", "../Achievements/AchievementCreate", new { }, htmlAttributes: new { @class = "btn" })
</p>
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.VideoGameName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VideoGameGenre)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VideoGameName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VideoGameGenre)
            </td>
            <td>
                @Html.ActionLink("Edit", "VideoGameEdit", new { id = item.VideoGameID }, htmlAttributes: new {@class="btn"}) |
                @Html.ActionLink("Details", "VideoGameDetails", new { id=item.VideoGameID }, htmlAttributes: new { @class = "btn" }) |
                @Html.ActionLink("Delete", "VideoGameDelete", new { id=item.VideoGameID }, htmlAttributes: new { @class = "btn" })
            </td>
        </tr>
    }

</table>
